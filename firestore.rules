rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && 
             request.auth.token.admin == true;
    }
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Bookings collection - Admin only
    match /bookings/{bookingId} {
      allow read: if isAdmin();
      allow write: if isAdmin();
      allow create: if true; // Allow public to create bookings
    }
    
    // Reviews collection
    match /reviews/{reviewId} {
      allow read: if true; // Anyone can read reviews
      allow create: if isAuthenticated(); // Must be logged in to create
      allow update: if isAdmin() || 
                       (isAuthenticated() && 
                        request.auth.uid == resource.data.userId); // Own reviews
      allow delete: if isAdmin();
    }
    
    // Collections data (rental items, categories, etc.)
    match /collections/{collectionId} {
      allow read: if true; // Public can view items
      allow write: if isAdmin(); // Only admins can modify
    }
    
    // Gallery images
    match /gallery/{imageId} {
      allow read: if true; // Public gallery
      allow write: if isAdmin();
    }
    
    // Admin users collection
    match /users/{userId} {
      allow read: if isAuthenticated() && 
                     (request.auth.uid == userId || isAdmin());
      allow write: if isAdmin();
    }
    
    // Contact form submissions
    match /contacts/{contactId} {
      allow create: if true; // Anyone can submit contact form
      allow read: if isAdmin();
      allow update, delete: if isAdmin();
    }
    
    // Default deny all other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

// Storage rules
service firebase.storage {
  match /b/{bucket}/o {
    
    // Gallery images - public read, admin write
    match /gallery/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && 
                      request.auth.token.admin == true;
    }
    
    // User uploads - authenticated users
    match /uploads/{userId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
                      request.auth.uid == userId;
    }
    
    // Booking attachments
    match /bookings/{bookingId}/{allPaths=**} {
      allow read: if request.auth != null && 
                     request.auth.token.admin == true;
      allow write: if true; // Allow uploads with bookings
    }
    
    // Default deny
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
